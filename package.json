{
  "name": "crystal-ball",
  "version": "0.1.0",
  "description": "CLI Tool to manage modpacks using JSON files and packwiz.",
  "bin": "./bin/cli/index.js",
  "repository": "https://github.com/gavinhsmith/Crystal-Ball",
  "author": "gavinhsmith <me@gavinhsmith.com> (https://gavinhsmith.com)",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "yarn@4.6.0",
  "packwiz": {
    "tool": "0626c00149a8d9a5e9f76e5640e7b8b95c064350",
    "format": "1.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/semver": "^7.5.8",
    "eslint": "^9.18.0",
    "eslint-config-sheriff": "^25.6.0",
    "jiti": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "clean": "rimraf ./dist ./bin ./test ./pack.json ./packs",
    "lint": "eslint",
    "compile": "tsc",
    "build": "npm-run-all clean lint compile --print-label",
    "dev:compile": "tsc --watch",
    "dev": "npm-run-all clean lint --parallel dev:compile --print-label",
    "cli": "node --trace-warnings ./dist/cli/index.js",
    "script:packwiz": "node ./scripts/install_packwiz.js"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "consola": "^3.4.0",
    "fast-json": "^3.0.0"
  }
}
