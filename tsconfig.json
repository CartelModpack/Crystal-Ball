    "strict": true,

    "rootDir": "./src",
    "outDir": "./bin",

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "pretty": true,

    "types": ["./src/types/auth.d.ts"],
    "paths": {
      "undici-types": ["./node_modules/undici-types/index.d.ts"],
      "commander": ["./node_modules/commander/typings/index.d.ts"]
    }
  },
  "include": ["./src"]
}
